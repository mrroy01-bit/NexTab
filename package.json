{
  "name": "nextab",
  "version": "1.0.0",
  "description": "A modern, accessible CSS framework with dark mode and RTL support",
  "type": "module",
  "main": "dist/js/framework.js",
  "module": "dist/js/framework.esm.js",
  "style": "dist/css/framework.css",
  "sass": "scss/framework.scss",
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "scss",
    "types",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:js && npm run build:css",
    "build:js": "rollup -c",
    "build:css": "gulp css",
    "watch": "npm run watch:js & npm run watch:css",
    "watch:js": "rollup -c -w",
    "watch:css": "gulp watch",
    "dev": "npm run watch",
    "start": "npm run dev",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js --max-warnings 0 || true",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\" || true",
    "prepare": "husky install || true",
    "prepublishOnly": "npm run build",
    "clean": "rimraf dist",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "keywords": [
    "css",
    "sass",
    "mobile-first",
    "responsive",
    "front-end",
    "framework",
    "web",
    "dark-mode",
    "rtl"
  ],
  "author": "NexVisora",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nexvisora/NexTab.git"
  },
  "bugs": {
    "url": "https://github.com/nexvisora/NexTab/issues"
  },
  "homepage": "https://github.com/nexvisora/NexTab#readme",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.5",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@testing-library/jest-dom": "^6.1.3",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "autoprefixer": "^10.4.16",
    "babel-jest": "^29.7.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.3.0",
    "gulp-postcss": "^9.0.1",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "rollup": "^4.0.2",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-serve": "^2.0.3",
    "sass": "^1.69.0",
    "typescript": "^5.2.2",
    "vitepress": "^1.0.0-rc.24"
  },
  "peerDependencies": {
    "postcss": "^8.0.0"
  }
}
